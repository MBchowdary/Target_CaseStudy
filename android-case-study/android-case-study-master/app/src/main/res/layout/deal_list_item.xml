<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/white_color"
    android:id="@+id/dealLayout"
    android:orientation="vertical">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/deal_list_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:background="@color/white_color"
      android:orientation="horizontal"
      android:padding="5dp">


    <ImageView
        android:id="@+id/deal_list_item_image_view"
        android:layout_width="@dimen/deal_list_item_image_size"
        android:layout_height="@dimen/deal_list_item_image_size"
        android:scaleType="fitXY"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

      <TextView
          android:id="@+id/deal_list_item_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:gravity="center"
          android:lines="1"
          android:padding="2dp"
          android:text="@string/empty_char"
          android:textColor="@color/gray_color"
          android:textSize="18sp"
          android:textStyle="normal" />

      <View
          android:id="@+id/viewid"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/gray_color" />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_margin="@dimen/item_padding"
          android:background="@color/white_color">

        <TextView
            android:id="@+id/deal_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="@dimen/item_padding"
            android:text="@string/empty_char"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deal_list_item_ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_toStartOf="@+id/deal_list_item_or"
            android:gravity="center"
            android:text="Ship"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deal_list_item_or"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_toStartOf="@+id/deal_list_item_b2"
            android:gravity="center"
            android:text="Or"
            android:textColor="@color/light_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deal_list_item_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="1dp"
            android:text="@string/empty_char"
            android:textColor="@color/red_color"
            android:gravity="center"
            android:textSize="18sp" />
      </RelativeLayout>

    </LinearLayout>

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/divider_height"
      android:background="@color/gray_color" />
</LinearLayout>